{
  "name": "tailwindcss-assistant",
  "version": "1.0.12",
  "description": "Get assistance when developing projects with Tailwind CSS ðŸ¤–",
  "keywords": [
    "Tailwind CSS",
    "Tailwind CSS Helper",
    "Tailwind CSS Assistant"
  ],
  "author": "Mark Mead",
  "license": "MIT",
  "module": "dist/assistant.esm.js",
  "unpkg": "dist/assistant.min.js",
  "scripts": {
    "start": "npm-run-all --parallel watch:esbuild watch:tailwind",
    "watch:esbuild": "nodemon --watch src -e js,css build.js",
    "build:js": "node build.js",
    "watch:tailwind": "npx tailwindcss -i ./src/input.css -o ./dist/winden-assistant.css --watch",
    "build:tailwind": "npx tailwindcss -i ./src/input.css -o ./dist/winden-assistant.css",
    "production:tailwind": "postcss ./dist/winden-assistant.css -o ./dist/winden-assistant.min.css",
    "build": "npm-run-all --parallel build:js build:tailwind",
    "production": "npm-run-all --parallel build:js production:tailwind"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "esbuild": "^0.18.17",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.3.6",
    "tailwindcss-assistant": "^1.0.12"
  }
}